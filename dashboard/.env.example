# Force inventory source behavior in dashboard/src/lib/inventory.ts
# true  = always use JSON fixture mock data
# false = always use Python/Ansible inventory (no fallback)
# unset = auto (Python first, fallback to fixture)
USE_MOCK_INVENTORY=true

# Session encryption key (must be long and random in production)
AUTOPATCH_SESSION_SECRET=replace-with-a-long-random-secret

# FreeIPA / LDAP connection settings
FREEIPA_HOST=ipa.example.com
FREEIPA_PORT=636
FREEIPA_BASE_DN=dc=example,dc=com
FREEIPA_BIND_DN=uid=svc_autopatch,cn=users,cn=accounts,dc=example,dc=com
FREEIPA_BIND_PASSWORD=replace-with-service-account-password
FREEIPA_USER_SEARCH_BASE=cn=users,cn=accounts,dc=example,dc=com
FREEIPA_USER_SEARCH_FILTER=(&(objectClass=person)(uid={{username}}))
FREEIPA_USE_TLS=true
